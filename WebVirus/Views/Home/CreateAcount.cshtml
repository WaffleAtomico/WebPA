@{
    Layout = "~/Views/Shared/_layoutBackLogin.cshtml";
    ViewData["Title"] = "Crear cuenta";
}
<h1>Selecciona el usuario que quieras crear su cuenta</h1>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="mostrarContenido('opcion1')">Alumno</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="mostrarContenido('opcion2')">Profesor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="mostrarContenido('opcion3')">Coordinador</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="mostrarContenido('opcion4')">Almacenista</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div id="opcion1-contenido" class="contenido" style="display: none;">
    <form action="#" class="login-form">
        <div class="form-group">
            <input type="text" class="form-control rounded-left" placeholder="Registro" required>
        </div>
        <br>
        <div class="btn-group" role="group" aria-label="Menús desplegables">
            <div class="form-group" style="margin-right: 1rem;">
                <input type="text" class="form-control rounded-left" placeholder="Nombre" required>
            </div>
            <br>
            <div class="form-group">
                <input type="text" class="form-control rounded-left" placeholder="Apellido" required>
                <br>
            </div>
            <br>
        </div>
        <br>
        <div class="form-group d-flex">
            <input type="password" class="form-control rounded-left" placeholder="Contraseña" required>
        </div>
        <br>
        <div class="btn-group" role="group" aria-label="Menús desplegables">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Grupo
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="#">A</a></li>
                    <li><a class="dropdown-item" href="#">B</a></li>
                    <li><a class="dropdown-item" href="#">C</a></li>
                </ul>
            </div>
            <div class="form-group" style="margin-left: 1rem;">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Grado
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                    @for (int i = 0; i <= 8; i++)
                    {
                        <li><a class="dropdown-item" href="#">@i</a></li>
                    }
                </ul>
            </div>
            <br>
        </div>
        <br>
        <div class="form-group" style="margin-top: 1rem;">
            <button asp-action="LoginValidation" asp-controller="Home" type="submit" style="align-content: center;"
                class="btn btn-outline-success">Crear cuenta</button>
        </div>
    </form>
</div>

